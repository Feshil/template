{
	"name": "task_runner",
	"version": "1.0.0",
	"description": "task runner",
	"main": "index.js",
	"scripts": {
		"postinstall": "npm run get:template && npm run rm -- .git LICENSE README.md && npm run work:server",
		"copy": "ncp",
		"mkdir": "mkdirp",
		"rm": "rimraf",
		"touch": "nodetouch",
		"scss": "node-sass",
		"watch": "onchange",
		"parallel": "run-p",
		"all": "npm-run-all",
		"lint:init": "eslint --init",
		"get:template": "mkdirp src/scss src/fonts src/assets src/img src/img/svg src/js src/docs dist/css dist/fonts dist/img dist/img/svg dist/js dist/docs dist/assets && nodetouch src/scss/main.scss src/js/main.js index.html index.js .gitignore && echo node_modules>>.gitignore && echo *.map>>.gitignore && echo dist>>.gitignore && eslint --init",
		"bs:proxy": "browser-sync start --proxy --files \"*.html, *.php, dist/css/**/*.css, dist/js/**/*.js\"",
		"bs:server": "browser-sync start --server --files \"*.html, *.php, dist/css/**/*.css, dist/js/**/*.js\"",
		"img:min": "node config/imagemin.js",
		"svg:min": "svgo -f src/img -o dist/img/svg --pretty -r --multipass",
		"/": "===================================================================================",
		"do:docs": "rimraf dist/docs/ && ncp src/docs/ dist/docs/",
		"do:fonts": "rimraf dist/fonts/ && ncp src/fonts/ dist/fonts/",
		"do:assets": "rimraf dist/assets/ && ncp src/assets/ dist/assets/",
		"do:img-min": "run-s img:min svg:min",
		"do:scss": "node-sass --output-style expanded --source-map dist/css -r -o dist/css src/scss",
		"do:scss-comp": "node-sass --output-style compressed -r -o dist/css src/scss",
		"do:css-min": "csso dist/css/main.css --output dist/css/main.min.css",
		"do:lint": "eslint  src/js dist/js",
		"do:lintReact": "eslint --ext .jsx --plugin eslint-plugin-react src/js dist/js",
		"do:uglify": "uglifyjs dist/js/app.js -o dist/js/app.min.js",
		"do:uglifyComp": "uglifyjs dist/js/app.js -m toplevel -c -o dist/js/app.js",
		"do:terser": "terser dist/js/app.js -o dist/js/app.min.js -c -m toplevel",
		"do:bableENV": "babel src/js/**/*.js -o dist/js/app.js --source-maps --presets @babel/preset-env",
		"do:bableReact": "babel src/js/**/*.js -o dist/js/app.js --presets @babel/preset-react",
		"//": "===================================================================================",
		"watch:scss": "node-sass --output-style expanded --source-map dist/css -r -w -o dist/css src/scss",
		"watch:bablejs": "onchange src/js/**/*.js -- run-s do:bableENV do:lint",
		"watch:bableReact": "babel --watch src/js/**/*.js -o dist/js/app.js --presets @babel/preset-react",
		"watch:img": "onchange src/img/**/* -e src/img/svg/**/* -- npm run img:min",
		"watch:svg": "onchange src/img/svg/**/*.svg -- npm run svg:min",
		"watch:docs": "onchange src/docs/**/* -- npm run do:docs",
		"watch:fonts": "onchange src/fonts/**/* -- npm run do:fonts",
		"watch:assets": "onchange src/assets/**/* -- npm run do:assets",
		"///": "===================================================================================",
		"work:proxy": "run-p watch:scss watch:bablejs watch:img watch:svg watch:docs watch:fonts watch:assets bs:proxy",
		"work:server": "run-p watch:scss watch:bablejs watch:img watch:svg watch:docs watch:fonts watch:assets bs:server",
		"////": "===================================================================================",
		"build:css": "rimraf dist/css/*.map && run-s do:scss-comp do:css-min",
		"build:ES5js": "rimraf dist/js/*.map && npm run do:uglifyComp",
		"build:full": "run-p do:assets do:docs do:fonts do:img-min build:css build:ES5js"
	},
	"author": "Ilya Fedotov",
	"license": "MIT",
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.7",
		"@babel/preset-env": "^7.8.7",
		"@babel/preset-react": "^7.8.3",
		"browser-sync": "^2.26.7",
		"csso-cli": "^3.0.0",
		"eslint": "^6.8.0",
		"eslint-plugin-react": "^7.17.0",
		"imagemin": "^7.0.1",
		"imagemin-mozjpeg": "^8.0.0",
		"imagemin-pngquant": "^8.0.0",
		"mkdirp": "^0.5.1",
		"ncp": "^2.0.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^6.1.0",
		"rimraf": "^3.0.0",
		"svgo": "^1.3.2",
		"terser": "^4.6.6",
		"touch": "^3.1.0",
		"uglify-js": "^3.8.0"
	},
	"dependencies": {},
	"browserslist": [
		"defaults"
	]
}
